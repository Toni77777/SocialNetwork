<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/friend_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="?android:attr/selectableItemBackground"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ImageView
        android:id="@+id/friend_avatar"
        android:layout_width="@dimen/friend_avatar_width"
        android:layout_height="@dimen/friend_avatar_height"
    />

    <TextView
        android:id="@+id/friend_name"
        android:layout_width="@dimen/weight_dimen"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/friend_margin_horizontal"
        android:layout_marginRight="@dimen/friend_margin_horizontal"
        android:layout_weight="1"/>

    <CheckBox
        android:id="@+id/friend_online"
        android:enabled="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/friend_margin_horizontal"
        android:layout_marginRight="@dimen/friend_margin_horizontal"
        android:button="@drawable/circle_online"
        android:clickable="false"
    />

</LinearLayout>